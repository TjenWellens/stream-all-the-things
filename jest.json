{
  "roots": ["<rootDir>/__tests__/unit"],
  "modulePaths": [
    "<rootDir>",
    "/node_modules/"
  ],
  "moduleFileExtensions": [
    "js",
    "jsx"
  ],
  "transform": {
    "^.+\\.jsx?$": "babel-jest"
  },
  "transformIgnorePatterns": ["/node_modules/"],
  "coveragePathIgnorePatterns": [
    "<rootDir>/app/imported.js",
    "/node_modules/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "collectCoverage": true,
  "collectCoverageFrom" : [
    "**/*.{js,jsx}"
  ],
  "setupFilesAfterEnv": ["<rootDir>/__tests__/setup.js"]
}